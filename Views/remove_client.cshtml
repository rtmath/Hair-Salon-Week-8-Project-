@{
  Layout="Shared/_Layout.cshtml";
}

<h3>This will remove a client from the system. Are you <strong>sure</strong> you would like to do this?</h3>

@if (Model.Count == 0)
{
  <h4>You don't have any clients. (Oh no!)</h4>
}
@if (Model.Count > 0)
{
<form class="" action="/client/delete" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <select name="client-id">
     @foreach (var client in Model)
     {
       <option value="@client.Id">@client.Name</option>
     }
  </select>
  <button type="submit" name="button">Remove Client</button>
</form>
}
