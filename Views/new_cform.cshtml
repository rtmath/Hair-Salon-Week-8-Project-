@{
  Layout="Shared/_Layout.cshtml";
}

<h2>Add a new Client:</h2>

@if (Model.Count == 0)
{
  <h3>You need to add a stylist first!</h3>
}

@if (Model.Count > 0)
{
<form class="" action="/client/add" method="post">
  <input type="text" name="client-name" placeholder="Enter Client's name here" required>
  <select name="stylist-id">
     @foreach (var stylist in Model)
     {
       <option value="@stylist.Id">@stylist.Name</option>
     }
  </select>
  <button type="submit" name="button">Add Client</button>
</form>
}
