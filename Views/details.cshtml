@{
  Layout="Shared/_Layout.cshtml";
}

<h3>Stylist details:</h3>

<h4>Here are the clients that this stylist is seeing:</h4>

@if (Model.Count == 0)
{
  <h4>This stylist is not seeing any clients.</h4>
}

@if (Model.Count > 0)
{
  @foreach (var client in Model)
  {
    <li>@client.Name</li>
  }
}

<a href="/list_stylists" class="btn btn-primary">Return to Previous Page</a>
