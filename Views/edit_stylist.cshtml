@{
  Layout="Shared/_Layout.cshtml";
}

<h3>@Model.Name:</h3>

<form action="/stylist/update/@Model.Id" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input name="client-id" type="hidden" value="@Model.Id">
  <input type="text" name="newName" placeholder="Edit this Stylist's name" required>
  <button type="submit" name="button">Edit Stylist</button>
</form>

<a href="/stylists/list" class="btn btn-primary topmargin">Return to Previous Page</a>
