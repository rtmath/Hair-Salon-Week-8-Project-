@{
  Layout="Shared/_Layout.cshtml";
}

<h2>Here are the stylists who are currently employed at Cut and Caboodle:</h2>
@if (Model.Count == 0)
{
<h4> You don't have any stylists yet! </h4>
}

@if (Model.Count > 0)
{
  <div class="blockcontainer">
    <div class="leftblock">
      @foreach (var stylist in Model)
      {
        <li>@stylist.Name</li>
      }
    </div>
    <div class="rightblock">
      @foreach (var stylist in Model)
      {

        <li><a class="details" href="/stylist/edit/@stylist.Id">Edit</a>   <a class="details" href="/details/@stylist.Id">View details</a></li>
      }
    </div>
  </div>
}
